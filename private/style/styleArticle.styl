@import 'style'

flex-flow()
  -webkit-flex-flow: arguments
  -moz-border-radius: arguments
  flex-flow: arguments

main
  width: 80%
  margin-top: 120px
  padding: 0 0 200px 100px


img
  width: 400px
  border: solid white 4px
  box-shadow: 2px 2px 2px 2px


.main
  position: relative


#content
  float: left

.container
  display: flex
  flex-flow: row wrap
  font-weight: bold
  text-align: center

.container > *
  padding: 10px
  flex: 1 100%

  @media all and (min-width: 600px)
    .main
      flex: 1 auto

  @media all and (min-width: 800px)
    .main
      flex: 3 auto
      order: 1
    .aside-1
      order: 2
    .aside-2
      order: 3
    .aside-3
      order: 3
    .aside-4
      order: 3
    .aside-5
      order: 3
