border-radius()
  -webkit-border-radius: arguments
  border-radius: arguments

@keyframes titleFloat
  0%
    top: 0px
  100%
    top: 30px

@keyframes titleReduce
  0%
    transform: translate(0px, 0px) rotate(0deg)
    font-size: 100px

  100%
    transform: translate(-400px, -60px) rotate(-10deg)
    font-size: 40px
    position: fixed

@keyframes slideDown
  100%
    transform: translateY(120px)

@keyframes headerReduction
  0%
    height: 100%

  100%
    height: 120px

@keyframes fadeIn
  100%
    visibility: visible

h1
  margin: 67px 0px

body
  float: left
  margin: 0
  overflow-x: hidden
  width: 100%

header
  position: fixed
  z-index: 1
  top: 0px
  overflow: hidden

  color: white
  font-family: 'Pacifico', cursive
  text-shadow: -2px 0 black, 0 2px black, 2px 0 black, 0 -2px black

  border-bottom: solid black 1px

  animation: 1s headerReduction 3s forwards

header a
  color: white
  text-decoration: none

#img_bg
  width: 100%

#title
  position: fixed
  top: 0px
  left: 25%
  font-size: 100px
  text-decoration: underline
  animation: 1s titleFloat 1s infinite alternate, 0.5s titleReduce 1s forwards

#title:hover, nav > ul > li:hover
  text-shadow: 3px 3px #101010

nav
  position: fixed
  font-family: 'Indie Flower', cursive
  top: -150px
  left: 300px

nav > ul
  list-style-type: none
  text-align: center

nav > ul > li
  margin: 40px
  float: left
  font-size: 40px

#menu
  animation: 1s slideDown 3s forwards

main
  visibility: hidden
  font-family: 'helvetica', cursive
  z-index: 0
  float: left
  width: 100%

  min-height: 500px
  animation: 1s fadeIn 3s forwards

main > section
  float: left

#about
  padding: 20px
  padding-top: 120px
  width: 100%
  min-height: 200px
  text-align: center
  background: linear-gradient(to right, #FFEF88, #88FFEF)
  border-bottom: 1px solid black

#about > h2, #news h2
  color: white
  text-shadow: -2px 0 black, 0 2px black, 2px 0 black, 0 -2px black

#about > p
  color: black
  font-size: 15px

#about > aside
  margin-top: 50px

#about > aside > a > img
  width: 50px
  margin: 20px

#news
  padding: 20px 100px

main > #news > article
  float: left
  margin: 0 20px 20px 20px
  padding: 0 20px 20px 20px

main > #news > article > h2 > a
  color: #FFEF00
  text-shadow: -2px 0 black, 0 2px black, 2px 0 black, 0 -2px black
  text-decoration: none

main > #news > article > h2 > a:hover
  text-shadow: -2px 0 #225566, 0 2px #225566, 2px 0 #225566, 0 -2px #225566

main > #news > article > div
  float: left
  padding: 20px
  border-radius: 3px 3px 3px 3px

main > #news > article > div > img
  float: left
  width: 20%
  border: solid white 4px
  border-radius: 3px
  box-shadow: 2px 2px 2px 2px
  margin-right: 30px

main > #news > article > div > p
  float: left
  width: 60%

#contact
  position: relative
  width: 100%
  margin: 120px 100px 50px 0
  text-align: center

#contact h2
  width: 100%
  color: #FFEF00
  text-shadow: -2px 0 black, 0 2px black, 2px 0 black, 0 -2px black

#contact form
  padding-left: 30%
  padding-right: 30%

#contact input
  width: 100%
  margin-bottom: 10px

#contact button
  height: 50px
  width: 100%
  border-radius: 0
  border: solid black 1px
  position: relative

footer
  float: left
  width: 100%
  padding: 0 100px 0 0
  text-align: center

.leftRotate
  transform: rotate(-5deg)

.rightRotate
  transform: rotate(5deg)

.lightInformation
  color: #BBBBBB
  font-size: small

.bottomLine
  border-bottom: #555555 solid 1px
